<body>
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <div class="my-3">
                <h1 class="text-center">Crear Usuario</h1>
            </div>
            <div class="card p-2 d-flex justify-content-center">
                <form asp-action="Crear" method="post" class="table-responsive">
                    <table class="table table-dark table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Nombres</th>
                                <th scope="col">Documento</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td scope="col"><input type="text" name="nombre" id="nombre"></td>
                                <td scope="col"><input type="text" name="documento_hash" id="documento_hash"></td>
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-success">Guardar</button>
                        <a class="btn btn-dark" asp-area="" asp-controller="Administradores" asp-action="AdminView">Volver</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</body>